@page
@model CreateQuoteModel
@{
    Layout = "../Shared/_Layout.cshtml";
}

<h2>Create Quote</h2>

<form method="post">
    <input type="hidden" asp-for="RequestModel.ProductId"/>

    <h4>Optyions</h4>

    @foreach (var option in Model.Options)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="RequestModel.OptionIds" value="@option.OptionId"/>
                <label class="form-check-label">@option.Name (+@option.AdditionalPrice)</label>
            </div>
        }

        <button type="submit" class="btn btn-success mt-3">Generate Quote</button>
    </form>
